<UserControl x:Class="AviHandler.UcDutResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AviHandler"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="210">
    <UserControl.Resources>
        <local:PercentToString x:Key="percent2Str"></local:PercentToString>
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="1,1,1,1" BorderBrush="#23cefd">
            <StackPanel Orientation="Horizontal"  >
                <Label Content="{Binding Name}" Foreground="{Binding Color}" Width="68" HorizontalAlignment="Center"  VerticalAlignment="Center"  ></Label>
                <Label Content="{Binding Count}" Foreground="{Binding Color}" Width="70" HorizontalAlignment="Center"  VerticalAlignment="Center"  ></Label>
                <Label Content="{Binding Percent,Converter={StaticResource percent2Str}}" Width="70" Foreground="{Binding Color}"   HorizontalAlignment="Center"  VerticalAlignment="Center"  ></Label>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
