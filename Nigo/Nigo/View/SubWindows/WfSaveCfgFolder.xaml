<Window x:Class="MemsHandler.WfSaveCfgFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemsHandler"
        mc:Ignorable="d"
        Title="WfSaveCfgFolder" Height="300" Width="500" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"  Topmost="True"  Background="Transparent"  ResizeMode="CanMinimize"
        WindowStyle="None">
    <Border Style="{StaticResource BlueBorder}" Margin="10" Background="Transparent">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#33CCFF"/>
        </Border.Effect>
        <Grid Background="Black">
            <Label Foreground="DeepSkyBlue" Content="SAVE AS NEW NAME:"  FontSize="24" Height="50" FontWeight="Bold" Grid.Column="0" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="10,24,193,152"/>
            <TextBox x:Name="BoxFileName" Text="STMOP-20060001" FontSize="24"  Height="50" Margin="10,113" Style="{ StaticResource BlueTextBox}" Width="450"></TextBox>
            <Button x:Name="BtnOk" Click="BtnOk_OnClick" Content="OK" Style="{StaticResource DefBtn}" IsCancel="True" FontSize="16" Height="50" Margin="364,166,10,10"/>

        </Grid>
    </Border>
</Window>
