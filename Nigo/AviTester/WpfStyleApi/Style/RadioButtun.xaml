    <Style x:Key="MenuRedRadio1" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="radioGrid" BorderThickness="2,2,2,0"  BorderBrush="#33CCFF">
                        <Label Width="140" Height="40" x:Name="radioContent"  VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="14"
                                        Content="{TemplateBinding Content}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!--//当控件获取焦点时要执行的内容-->
                        <Trigger Property="IsEnabled"  Value="false">
                            <Setter TargetName="radioGrid" Property="Background" Value="DarkGray" ></Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter TargetName="radioGrid" Property="CornerRadius" Value="0,20,0,0" ></Setter>
                            <Setter TargetName="radioGrid" Property="Background" Value="DeepSkyBlue" ></Setter>
                            <Setter TargetName="radioContent" Property="Foreground" Value="white" />
                            <Setter TargetName="radioContent" Property="FontSize" Value="14" />
                            <Setter TargetName="radioGrid" Property="BorderBrush" Value="White" />
                        </Trigger>

                        <!--//当鼠标放上去时要设置的内容-->
                        <Trigger Property="IsMouseOver"  Value="true">
                            <!--<Setter TargetName="radioContent" Property="FontSize" Value="10" />
                            <Setter TargetName="radioContent" Property="Foreground" Value="white" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

