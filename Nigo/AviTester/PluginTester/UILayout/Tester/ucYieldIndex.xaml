        <Label Content="Index10" Foreground="OrangeRed" Grid.Row="11" Grid.Column="0" FontSize="14" HorizontalAlignment="Center" />
        <Label Width="65"  Grid.Row="11" Grid.Column="1" Foreground="White" FontSize="14" Content="{Binding Index10Count}" />
        <Label Width="45" Foreground="White"  Grid.Row="11" Grid.Column="2" FontSize="14" Content="{Binding Yield_Index10}" />
        <Label Content="%"  Grid.Row="11" Grid.Column="3" FontSize="14" Foreground="White" HorizontalContentAlignment="Center" ></Label>

        <Label Content="Index11" Foreground="OrangeRed" Grid.Row="12" Grid.Column="0" FontSize="14" HorizontalAlignment="Center" />
        <Label Width="65"  Grid.Row="12" Grid.Column="1" Foreground="White" FontSize="14" Content="{Binding Index11Count}" />
        <Label Width="45" Foreground="White"  Grid.Row="12" Grid.Column="2" FontSize="14" Content="{Binding Yield_Index11}" />
        <Label Content="%"  Grid.Row="12" Grid.Column="3" FontSize="14" Foreground="White" HorizontalContentAlignment="Center" ></Label>

        <Label Content="Index12" Foreground="OrangeRed" Grid.Row="13" Grid.Column="0" FontSize="14" HorizontalAlignment="Center" />
        <Label Width="65"  Grid.Row="13" Grid.Column="1" Foreground="White" FontSize="14" Content="{Binding Index12Count}" />
        <Label Width="45" Foreground="White"  Grid.Row="13" Grid.Column="2" FontSize="14" Content="{Binding Yield_Index12}" />
        <Label Content="%"  Grid.Row="13" Grid.Column="3" FontSize="14" Foreground="White" HorizontalContentAlignment="Center" ></Label>
    </Grid>
</UserControl>
