        <Label Content="Index8" Foreground="OrangeRed" Grid.Row="9" Grid.Column="0" FontSize="14" HorizontalAlignment="Center" />
        <Label Width="65"  Grid.Row="9" Grid.Column="1" Foreground="White" FontSize="14" Content="{Binding Index8Count}" />
        <Label Width="45" Foreground="White"  Grid.Row="9" Grid.Column="2" FontSize="14" Content="{Binding Yield_Index8}" />
