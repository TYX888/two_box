<UserControl x:Class="AviTester.UcDutResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AviTester"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="270">
    <UserControl.Resources>
        <local:PercentToString x:Key="percent2Str"></local:PercentToString>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" >
            <Label Content="{Binding Name}" Foreground="{Binding Color}"  Margin="2" BorderBrush="DeepSkyBlue" BorderThickness="2"  Height="30"  Width="85" ></Label>
            <Label Content="{Binding Count}" Foreground="{Binding Color}"  Margin="2" BorderBrush="DeepSkyBlue" BorderThickness="2"  Height="30"  Width="85" ></Label>
            <Label Content="{Binding Percent,Converter={StaticResource percent2Str}}" Foreground="{Binding Color}"  Margin="2" BorderBrush="DeepSkyBlue" BorderThickness="2"  Height="30"  Width="85" ></Label>
           
        </StackPanel>
    </Grid>
</UserControl>
