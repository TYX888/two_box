<UserControl x:Class="AviTester.UcDutInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AviTester"
             mc:Ignorable="d" Height="auto" Width="auto">
    <Grid>
        <Border  BorderThickness="1"  BorderBrush="DeepSkyBlue" CornerRadius="0">
            <Label x:Name="LabelDut" MouseEnter="LabelDut_MouseEnter">
                <Label.ToolTip>
                    <ToolTip x:Name="Tip" Style="{StaticResource FlowToolTip}" Content=""></ToolTip>
                </Label.ToolTip>
            </Label>
        </Border>
    </Grid>
</UserControl>
